{
    "java.configuration.updateBuildConfiguration": "automatic",
    // Reduce VS Code load for this repo
    "files.exclude": {
        "target": true,
        "**/.git": true
    },
    "files.watcherExclude": {
        "**/target/**": true,
        "**/.git/**": true,
        "**/node_modules/**": true,
        "**/.calva/**": true,
        "**/.lsp/**": true
    },
    "search.exclude": {
        "**/target/**": true,
        "**/docs/**": true,
        "**/*.png": true,
        "**/*.gif": true
    },
    // Keep extensions quieter
    "redhat.telemetry.enabled": false,
    // Java extension: lower overhead
    "java.referencesCodeLens.enabled": false,
    "java.implementationsCodeLens.enabled": false,
    "java.progressReports.enabled": false,
    "java.import.maven.enabled": false,
    "java.import.gradle.enabled": false,
    "java.jdt.ls.vmargs": "-Xms128m -Xmx768m -XX:+UseParallelGC -XX:MaxMetaspaceSize=384m -Xlog:disable",
    "java.compile.nullAnalysis.mode": "disabled",
    "java.completion.enabled": false,
    "java.symbols.includeSourceMethodDeclarations": false,
    // Prevent formatters from breaking Leiningen template files
    "files.associations": {
        "**/resources/leiningen/new/**/*.clj": "plaintext"
    },
    "[plaintext]": {
        "editor.formatOnSave": false
    },
    // Also guard Calva formatter just in case
    "calva.fmt.formatOnSave": false,
    // Disable format on save for the template project.clj explicitly
    "editor.formatOnSave": false
}